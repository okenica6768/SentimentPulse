
{
  "name": "userAssets",
  "options": {
    "validator": {
      "$jsonSchema": {
        "bsonType": "object",
        "required": ["userId", "assetSymbol", "isTracked"],
        "properties": {
          "userId": {
            "bsonType": "string",
            "description": "User ID who is tracking the asset"
          },
          "assetSymbol": {
            "bsonType": "string",
            "description": "Symbol of the tracked asset"
          },
          "isTracked": {
            "bsonType": "bool",
            "description": "Whether user is currently tracking this asset"
          },
          "alertThresholds": {
            "bsonType": "object",
            "properties": {
              "priceUp": { "bsonType": "number" },
              "priceDown": { "bsonType": "number" },
              "sentimentChange": { "bsonType": "number" }
            },
            "additionalProperties": true
          },
          "creator": {
            "bsonType": "string",
            "description": "Creator of the tracking relationship"
          },
          "createdAt": {
            "bsonType": "string",
            "title": "datetime",
            "description": "ISO 8601 datetime string (UTC): YYYY-MM-DDTHH:mm:ss.sssZ"
          },
          "updatedAt": {
            "bsonType": "string",
            "title": "datetime",
            "description": "ISO 8601 datetime string (UTC): YYYY-MM-DDTHH:mm:ss.sssZ"
          }
        },
        "additionalProperties": true
      }
    },
    "validationLevel": "moderate",
    "validationAction": "warn"
  }
}
